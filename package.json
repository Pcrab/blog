        "lint:fix": "pnpm lint --fix",
        "nuke": "rimraf pnpm-lock.yaml && pnpm freshinstall",
        "prepare": "husky install",
        "preview": "astro preview",
        "start": "astro dev",
        "syncpack:fix": "syncpack format && syncpack fix-mismatches"
    },
    "type": "module",
    "main": "index.js",
