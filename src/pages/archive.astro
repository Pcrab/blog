---
import Html from "@layouts/Html.astro";
import { getAllPosts } from "@utils/post/get";

const posts = getAllPosts();
---

<Html>
    <div class="flex flex-col mt-10">
        {
            posts.map((post) => {
                return (
                    <div class="py-6 sm:py-2 dark:border-gray-500 border-gray-300 border-t border-b first:border-t-2 last:border-b-2">
                        <a
                            class="flex justify-between sm:flex-col border-none hover:border-none hover:text-gray-400 items-center sm:items-start"
                            href={`/post/${post.slug}`}
                        >
                            <div class="sm:order-2 sm:ml-8 text-lg">
                                {post.title}
                            </div>
                            <div class="font-mono sm:order-1">
                                <b>「</b>
                                {` ${post.date.format("YYYY 年 MM 月 DD 日")} `}
                                <b>」</b>
                            </div>
                        </a>
                    </div>
                );
            })
        }
    </div>
</Html>
