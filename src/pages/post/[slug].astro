---
import type { InferGetStaticParamsType } from "astro";
import { getAllPostSlugs, getPostBySlug } from "@utils/post/get";
import Html from "@layouts/Html.astro";
export const getStaticPaths = () => {
    const slugs = getAllPostSlugs();
    return slugs.map((slug) => {
        return {
            params: {
                slug,
            },
        };
    });
};
type Params = InferGetStaticParamsType<typeof getStaticPaths>;
const { slug } = Astro.params as Params;
const post = getPostBySlug(slug);
---

<style is:global>
    html {
        --shiki-color-text: #444d56;
        /* --shiki-color-background: #333333; */
        --shiki-token-constant: #005cc5;
        --shiki-token-string: #032f62;
        --shiki-token-comment: #6a737d;
        --shiki-token-keyword: #d73a49;
        --shiki-token-parameter: #24292e;
        --shiki-token-function: #bb0000;
        --shiki-token-string-expression: #094993;
        --shiki-token-punctuation: #e36209;
        --shiki-token-link: #0366d6;
    }
    @media (prefers-color-scheme: dark) {
        html {
            --shiki-color-text: #d1d5da;
            /* --shiki-color-background: #333333; */
            --shiki-token-constant: #79b8ff;
            --shiki-token-string: #9ecbff;
            --shiki-token-comment: #6a737d;
            --shiki-token-keyword: #f97583;
            --shiki-token-parameter: #e1e4e8;
            --shiki-token-function: #cf8c8c;
            --shiki-token-string-expression: #a7bbd2;
            --shiki-token-punctuation: #e36209;
            --shiki-token-link: #4487d4;
        }
    }
</style>
<Html title={post.title}>
    <h1
        class="m-10 text-center text-4xl sm:text-2xl font-bold after:content-['----------'] after:text-red-800 dark:after:text-red-100"
    >
        <div>
            {post.title}
        </div>
    </h1>
    <div
        class="max-w-full prose-pre:overflow-x-auto prose-pre:p-2 prose-headings:my-4 prose-headings:font-bold prose-p:my-2 prose-h2:text-2xl prose-h3:text-xl prose-headings:before:content-['#'] prose-headings:before:mr-3 prose-img:mx-auto prose-img:my-5 prose-a:border-b-2 prose-a:border-b-[color:var(--normal)] hover:prose-a:border-b-[color:var(--hover)]"
        set:html={post.content}
    />
    <div
        class="mt-5 text-center flex flex-col items-center p-4 bg-gray-300 dark:bg-gray-700 rounded-2xl"
    >
